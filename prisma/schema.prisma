generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Box {
  id        Int          @id @default(autoincrement())
  superzahl Int
  tickets   Box_Ticket[]
}

model Ticket {
  id      Int          @id @default(autoincrement())
  numbers Json
  boxes   Box_Ticket[]
}

model Box_Ticket {
  box      Box    @relation(fields: [boxId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  boxId    Int
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  ticketId Int

  @@id([ticketId, boxId])
}
